<Page
    x:Class="TaskFlow.View.PomodoroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskFlow.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PomodoroPage"
    d:DesignHeight="452"
    d:DesignWidth="640"
    mc:Ignorable="d">
    <Border
        Width="275"
        Height="350"
        Background="{StaticResource Black}"
        CornerRadius="15">
        <StackPanel VerticalAlignment="Bottom">
            <TextBlock
                Margin="0,0,0,15"
                Style="{StaticResource Header}"
                Text="Pomodoro" />
            <Grid
                Width="220"
                Height="220"
                Margin="0,0,0,12.5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Background Circle  -->
                <Ellipse
                    Grid.RowSpan="4"
                    Stroke="{StaticResource DarkGray}"
                    StrokeThickness="20" />

                <!--  Progress   Circle  -->
                <Path
                    Grid.RowSpan="4"
                    Fill="Transparent"
                    Stroke="{StaticResource Green}"
                    StrokeEndLineCap="Round"
                    StrokeStartLineCap="Round"
                    StrokeThickness="20">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure IsClosed="False" StartPoint="110, 10">
                                <ArcSegment
                                    IsLargeArc="{Binding IsLargeArc}"
                                    Point="{Binding ArcPoint}"
                                    Size="100, 100"
                                    SweepDirection="Clockwise" />
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>

                <!--  Timer-Text  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="54"
                    Text="{Binding TimerText}">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            Direction="240"
                            Opacity="0.6"
                            ShadowDepth="3" />
                    </TextBlock.Effect>
                </TextBlock>
                <Button
                    Grid.Row="2"
                    Command="{Binding SkipTimerCommand}"
                    Style="{StaticResource SkipTimerBtn}"
                    Tag="{Binding ShowSkipTimerBtn}">
                    <Image Width="15" Source="{StaticResource SkipBreakIcon}">
                        <Image.Effect>
                            <DropShadowEffect
                                Direction="240"
                                Opacity="0.6"
                                ShadowDepth="3" />
                        </Image.Effect>
                    </Image>
                </Button>
            </Grid>
            <Button
                Margin="0,0,0,15"
                Command="{Binding ToggleTimerCommand}"
                Content="{Binding ToggleTimerBtnText}"
                Style="{StaticResource SubmitBtn}" />
        </StackPanel>
    </Border>
</Page>
