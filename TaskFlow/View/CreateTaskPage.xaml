<Page
    x:Class="TaskFlow.View.CreateTaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskFlow.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="CreateTaskPage"
    d:DesignHeight="452"
    d:DesignWidth="640"
    mc:Ignorable="d">

    <Border
        Width="203"
        Height="287"
        Background="{StaticResource Black}"
        CornerRadius="15">
        <StackPanel>
            <TextBlock
                Margin="0,9,0,15"
                HorizontalAlignment="Center"
                FontSize="32"
                Text="Create Task" />
            <xctk:WatermarkTextBox Margin="0,0,0,20" Style="{StaticResource StandardTextBox}">
                <xctk:WatermarkTextBox.Watermark>
                    <TextBlock Text="Name" />
                </xctk:WatermarkTextBox.Watermark>
            </xctk:WatermarkTextBox>
            <ComboBox Margin="0,0,0,20" />
            <xctk:WatermarkTextBox
                Margin="0,0,0,20"
                Focusable="False"
                IsReadOnly="True"
                Style="{StaticResource ReadOnlyTextBox}">
                <xctk:WatermarkTextBox.Watermark>
                    <TextBlock Text="Date" />
                </xctk:WatermarkTextBox.Watermark>
            </xctk:WatermarkTextBox>
            <xctk:WatermarkTextBox Margin="0,0,0,20" Style="{StaticResource StandardTextBox}">
                <xctk:WatermarkTextBox.Watermark>
                    <TextBlock Text="Time (HH/MM)" />
                </xctk:WatermarkTextBox.Watermark>
            </xctk:WatermarkTextBox>
            <Button Content="Submit" Style="{StaticResource SubmitBtn}" />
        </StackPanel>
    </Border>
</Page>
