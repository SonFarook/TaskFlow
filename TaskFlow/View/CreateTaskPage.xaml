<Page
    x:Class="TaskFlow.View.CreateTaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:TaskFlow.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:TaskFlow.ViewModel"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="CreateTaskPage"
    d:DesignHeight="452"
    d:DesignWidth="640"
    mc:Ignorable="d">
    <Page.DataContext>
        <vm:CreateTaskViewModel />
    </Page.DataContext>

    <Border
        Width="203"
        Height="335"
        Background="{StaticResource Black}"
        CornerRadius="15">
        <StackPanel>
            <TextBlock
                Margin="0,9,0,5"
                HorizontalAlignment="Center"
                FontSize="32"
                Text="Create Task" />
            <TextBlock Margin="35,0,0,2" Text="Name" />
            <TextBox Margin="0,0,0,14" Style="{StaticResource StandardTextBox}" />
            <TextBlock Margin="35,0,0,2" Text="Priority" />
            <ComboBox Margin="0,0,0,14">
                <ComboBoxItem>
                    <TextBlock Foreground="{StaticResource LightGreen}" Text="Low" />
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Foreground="{StaticResource Yellow}" Text="Mid" />
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Foreground="{StaticResource Red}" Text="High" />
                </ComboBoxItem>
            </ComboBox>
            <TextBlock Margin="35,0,0,2" Text="Date" />
            <Border
                Width="141"
                Height="24"
                Margin="0,0,0,14"
                Background="{StaticResource Green}"
                BorderBrush="{StaticResource LightGray}"
                BorderThickness="0.5"
                CornerRadius="10">
                <Grid>
                    <TextBlock
                        Margin="6,2,0,0"
                        HorizontalAlignment="Left"
                        FontSize="15"
                        Text="{Binding SelectedDate}" />
                    <DatePicker
                        Width="30"
                        HorizontalAlignment="Right"
                        Language="de-DE"
                        SelectedDate="{Binding SelectedDate, Mode=TwoWay}" />
                </Grid>
            </Border>
            <TextBlock Margin="35,0,0,2" Text="Time (HH:MM)" />
            <TextBox
                Margin="0,0,0,15"
                PreviewTextInput="TextBox_PreviewTextInput"
                KeyDown="TextBox_KeyDown"
                MaxLength="5"
                Style="{StaticResource StandardTextBox}"
                TextChanged="TextBox_TextChanged" />
            <Button Content="Submit" Style="{StaticResource SubmitBtn}" />
        </StackPanel>
    </Border>
</Page>
