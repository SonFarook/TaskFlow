<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Style x:Key="StandardTextBox" TargetType="{x:Type xctk:WatermarkTextBox}">
        <Setter Property="Width" Value="141" />
        <Setter Property="Height" Value="24" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Background" Value="{StaticResource Green}" />
        <Setter Property="BorderBrush" Value="{StaticResource LightGray}" />
        <Setter Property="BorderThickness" Value="0.5" />
        <Setter Property="FontFamily" Value="{StaticResource Afacad}" />
        <Setter Property="Foreground" Value="{StaticResource LightGray}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type xctk:WatermarkTextBox}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <Grid>
                            <ContentPresenter
                                x:Name="PART_WatermarkHost"
                                Margin="10,2,0,0"
                                Content="{TemplateBinding Watermark}"
                                IsHitTestVisible="False"
                                Visibility="Collapsed"
                                Opacity="0.85"/>
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Padding="{TemplateBinding Padding}"
                                Background="{x:Null}"
                                BorderThickness="0"
                                IsTabStop="False" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="PART_WatermarkHost" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="PART_WatermarkHost" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Read Only TextBox  -->
    <Style
        x:Key="ReadOnlyTextBox"
        BasedOn="{StaticResource StandardTextBox}"
        TargetType="{x:Type xctk:WatermarkTextBox}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Arrow" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>