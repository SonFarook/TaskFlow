<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Style x:Key="StandardTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="Width" Value="141" />
        <Setter Property="Height" Value="24" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Background" Value="{StaticResource Green}" />
        <Setter Property="BorderBrush" Value="{StaticResource LightGray}" />
        <Setter Property="BorderThickness" Value="0.5" />
        <Setter Property="FontFamily" Value="{StaticResource Afacad}" />
        <Setter Property="Foreground" Value="{StaticResource LightGray}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ScrollViewer
                            x:Name="PART_ContentHost"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Focusable="True" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="IBeam" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  Read Only TextBox  -->
    <Style
        x:Key="ReadOnlyTextBox"
        BasedOn="{StaticResource StandardTextBox}"
        TargetType="{x:Type TextBox}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="IsReadOnly" Value="True" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Arrow" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>